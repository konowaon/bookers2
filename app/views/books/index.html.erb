<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>

        <%= render 'list' %>
        
        <!-- form_with部分 -->
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
        
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        
          <%= f.submit 'Creat Book' %>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <% @books.each do |book| %>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>
            <%= image_tag 'default-image.jpg' %></th>
              <th>Title</th>
              <td><%= book.title %></td>
              <th>Opinion</th>
              <td><%= book.body %></td>
              <td><%= link_to "show", book_path(book.id) %></td>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</main>

